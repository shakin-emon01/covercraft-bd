# Database
DATABASE_URL="postgresql://user:password@localhost:5432/covercraft_db"

# JWT Secret Keys
JWT_SECRET="your-jwt-secret-key-min-32-characters-long"
REFRESH_TOKEN_SECRET="your-refresh-token-secret-key-min-32-characters"

# Email Configuration
EMAIL_USER="your-gmail@gmail.com"
EMAIL_PASS="your-gmail-app-password"

# Frontend URL
FRONTEND_URL="http://localhost:5173"
CLIENT_URL="http://localhost:5173"
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"

# API Configuration
PORT=5000
NODE_ENV="development"
TRUST_PROXY=1
API_PUBLIC_URL="http://localhost:5000"

# Security - reCAPTCHA (optional for P2 feature)
RECAPTCHA_SECRET_KEY="your-recaptcha-secret-key"
RECAPTCHA_SITE_KEY="your-recaptcha-site-key"

# Security - hCaptcha (optional alternative)
HCAPTCHA_SECRET="your-hcaptcha-secret"
HCAPTCHA_SITE_KEY="your-hcaptcha-site-key"

# File Upload Paths
UPLOAD_PATH="./uploads"
LOGO_UPLOAD_PATH="./uploads/logos"
REQUEST_UPLOAD_PATH="./uploads/requests"

# Signed URL Configuration
SIGNED_URL_EXPIRY_MINUTES=30
